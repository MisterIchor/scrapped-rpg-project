extends "../Item.gd"



func _init() -> void:
	add_value("body_part", "")
	add_value("material", "")
	add_value("defense", -1)
	add_value("resistances", [])
	add_value("spell_failure_chance", -1)



func set_body_part(new_part : String) -> void:
	set("body_part", new_part)


func set_material(new_material : String) -> void:
	set("material", new_material)


func set_defense(new_defense : int) -> void:
	set("defense", new_defense)


func set_resistances(new_resistances : Array) -> void:
	set("resistances", new_resistances)


func set_spell_failure_chance(new_chance : int) -> void:
	set("spell_failure_chance", new_chance)



func get_body_part() -> String:
	return get("body_part")


func get_material() -> String:
	return get("material")


func get_defense() -> int:
	return get("defense")


func get_spell_failure_chance() -> int:
	return get("spell_failure_chance")
